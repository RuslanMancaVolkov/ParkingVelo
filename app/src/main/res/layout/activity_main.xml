<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruslanmancavolkov.parkingvelo.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="7">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.ruslanmancavolkov.parkingvelo.MainActivity"
                android:layout_weight="6">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context="com.example.rusla.sortonsadijon.MapsActivity"/>

                <LinearLayout
                    android:layout_height="48dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="60dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8">
                    </RelativeLayout>

                    <!--<RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3">
                    </RelativeLayout>-->

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2">
                        <ImageButton
                            android:id="@+id/btn_show_route"
                            android:background="?android:selectableItemBackground"
                            android:src="@mipmap/logo_route"
                            android:paddingTop="0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <!--<RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2">
                        <ImageButton
                            android:id="@+id/btnTakePhoto"
                            android:background="?android:selectableItemBackground"
                            android:src="@mipmap/logo_velo"
                            android:paddingTop="0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"/>
                    </RelativeLayout>-->

                </LinearLayout>

            </FrameLayout>
            <Button
                android:id="@+id/btn_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="@string/btn_account"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
